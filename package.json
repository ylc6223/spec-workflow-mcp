{
  "name": "specflow-mcp-monorepo",
  "version": "0.0.20",
  "description": "AI规范驱动开发平台 - 构建AI敏捷开发闭环，让每一行代码都有据可循",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "dev": "pnpm --filter @specflow/spec-workflow-mcp dev",
    "start": "pnpm --filter @specflow/spec-workflow-mcp start",
    "dev:dashboard": "pnpm --filter @specflow/dashboard-frontend dev",
    "build:dashboard": "pnpm --filter @specflow/dashboard-frontend build",
    "dev:docs": "pnpm --filter @specflow/docs dev",
    "build:docs": "pnpm --filter @specflow/docs build",
    "preview:docs": "pnpm --filter @specflow/docs preview",
    "clean": "pnpm -r clean",
    "build:core": "pnpm --filter @specflow/spec-workflow-core build",
    "build:backend": "pnpm --filter @specflow/dashboard-backend build",
    "build:frontend": "pnpm --filter @specflow/dashboard-frontend build",
    "build:mcp": "pnpm --filter @specflow/spec-workflow-mcp build",
    "build:extension": "pnpm --filter @specflow/vscode-extension build",
    "test": "pnpm -r test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "spec-workflow",
    "ai-development",
    "claude",
    "cursor",
    "development-workflow",
    "project-management"
  ],
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.3",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.8"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "fastify": "^4.24.3",
    "@fastify/static": "^7.0.4",
    "@fastify/websocket": "^8.2.1",
    "@modelcontextprotocol/sdk": "^0.5.0"
  }
}
