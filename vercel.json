{
  "version": 2,
  "name": "spec-workflow-mcp-docs",
  "framework": null,
  "buildCommand": "rm -f pnpm-lock.yaml && pnpm install && pnpm --filter @specflow/docs build",
  "outputDirectory": "packages/docs/.vitepress/dist",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "devCommand": "cd packages/docs && pnpm dev",
  "public": true,
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "env": {
    "NODE_VERSION": "18"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}